{
  "name": "markodingplatform-api",
  "version": "0.1.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "dev": "backpack -r dotenv/config",
    "build": "rimraf ./build && backpack build",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --fix --ext ts",
    "prettier": "prettier --write 'src/**/*.ts'",
    "start": "node -r dotenv/config ./build/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markoding-platform/markodingplatform-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/markoding-platform/markodingplatform-api/issues"
  },
  "homepage": "https://github.com/markoding-platform/markodingplatform-api#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.(ts)": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "tabWidth": 2
        }
      ]
    }
  },
  "eslintIgnore": [
    "build",
    "node_modules"
  ],
  "dependencies": {
    "@types/pg": "^7.14.6",
    "@types/validator": "^13.1.0",
    "aws-sdk": "^2.820.0",
    "camelcase-keys": "^6.2.2",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.7.0",
    "fastify-cors": "^5.1.0",
    "fastify-decorators": "^3.4.1",
    "fastify-multipart": "^3.3.1",
    "hyperid": "^2.0.5",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.4.2",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.29",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "backpack-core": "^0.8.4",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.10",
    "typescript": "^4.0.5"
  }
}
