{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "target": "ES5",
    "lib": [
      "ES5",
      "ES7",
      "ES2015.Promise"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/libs/types/*"
      ]
    },
    "typeRoots" : ["./node_modules/@types", "./src/libs/types", "./src/libs/interfaces"],
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "scripts/**/*"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
